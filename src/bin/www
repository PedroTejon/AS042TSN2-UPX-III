var nodeSchedule = require('node-schedule')
var app = require('../app');
var debug = require('debug')('src:server');
var http = require('http');
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

var server = http.createServer(app);

var energiaTotalScraper = require('../extractionModules/energiaTotal')
nodeSchedule.scheduleJob('* * * */1 * *', () => { energiaTotalScraper.scrape() })

var leroyMerlinScraper = require('../extractionModules/leroyMerlin')
nodeSchedule.scheduleJob('* * * */1 * *', () => { leroyMerlinScraper.scrape() })

var magazineLuizaScraper = require('../extractionModules/magazineLuiza')
nodeSchedule.scheduleJob('* * * */1 * *', () => { magazineLuizaScraper.scrape() })

// var mercadoLivreScraper = require('../extractionModules/mercadoLivre')
// nodeSchedule.scheduleJob('* * * */1 * *', () => { mercadoLivreScraper.scrape() })

var minhaCasaScraper = require('../extractionModules/minhaCasaSolar')
nodeSchedule.scheduleJob('* * * */1 * *', () => { minhaCasaScraper.scrape() })

var neoSolarScraper = require('../extractionModules/neoSolar')
nodeSchedule.scheduleJob('* * * */1 * *', () => { neoSolarScraper.scrape() })

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }

  return false;
}

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
    default:
      throw error;
  }
}

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
